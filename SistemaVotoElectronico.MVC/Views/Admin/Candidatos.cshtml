@model List<SistemaVoto.Modelos.Candidato>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>👮‍♂️ Administración de Candidatos</h2>
        <a asp-action="CrearCandidato" class="btn btn-primary">
            ➕ Nuevo Candidato
        </a>
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Foto</th>
                <th>Nombre</th>
                <th>Partido</th>
                <th>Dignidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.FotoUrl))
                        {
                            <img src="@item.FotoUrl" class="rounded-circle" width="40" height="40" style="object-fit:cover" />
                        }
                        else
                        {
                            <span>📷</span>
                        }
                    </td>
                    <td>@item.Nombre</td>
                    <td>@item.PartidoPolitico</td>
                    <td>@item.Dignidad</td>
                    <td>
                        <button class="btn btn-sm btn-danger disabled">🗑️ Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>