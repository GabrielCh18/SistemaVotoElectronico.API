@model List<SistemaVoto.Modelos.Candidato>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>👮‍♂️ Administración de Candidatos</h2>
        <a asp-action="CrearCandidato" class="btn btn-primary">
            ➕ Nuevo Candidato
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <table class="table table-hover shadow-sm align-middle">
        <thead class="table-dark">
            <tr>
                <th>Foto</th>
                <th>Nombre</th>
                <th>Partido</th>
                <th>Dignidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.FotoUrl))
                        {
                            <img src="@item.FotoUrl" class="rounded-circle border" width="50" height="50" style="object-fit:cover" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width:50px; height:50px;">📷</div>
                        }
                    </td>
                    <td class="fw-bold">@item.Nombre</td>
                    <td>@item.PartidoPolitico</td>
                    <td><span class="badge bg-info text-dark">@item.Dignidad</span></td>
                    <td>
                        <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Seguro que quieres borrar a @item.Nombre? Esta acción no se puede deshacer.');">
                            🗑️ Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>