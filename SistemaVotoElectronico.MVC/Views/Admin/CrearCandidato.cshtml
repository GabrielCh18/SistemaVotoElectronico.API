@model SistemaVoto.Modelos.Candidato

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">➕ Registrar Nuevo Candidato</h3>
                </div>
                <div class="card-body bg-light">
                    <form asp-action="CrearCandidato" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre del Candidato</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Juan Pérez" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Partido Político</label>
                            <input asp-for="PartidoPolitico" class="form-control" placeholder="Ej: Lista 1 - Los Programadores" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Dignidad</label>
                            <select asp-for="Dignidad" class="form-select">
                                <option value="Asambleísta Nacional">Asambleísta Nacional</option>
                                <option value="Asambleísta Provincial">Asambleísta Provincial</option>
                                <option value="Presidente">Presidente</option>
                                <option value="Alcalde">Alcalde</option>
                                <option value="Prefecto">Prefecto</option>
                                <option value="Null">Null</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Foto (URL de Internet)</label>
                            <input asp-for="FotoUrl" id="imgUrl" class="form-control" placeholder="Pegar link de imagen..." onchange="previsualizar()" />
                        </div>

                        <div class="text-center mb-4">
                            <img id="imgPreview" src="" class="rounded-circle border border-3 border-white shadow" style="width: 150px; height: 150px; object-fit: cover; display: none;" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">💾 Guardar Candidato</button>
                            <a asp-action="Candidatos" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function previsualizar() {
        var url = document.getElementById("imgUrl").value;
        var img = document.getElementById("imgPreview");
        if (url) {
            img.src = url;
            img.style.display = "inline-block";
        }
    }
</script>