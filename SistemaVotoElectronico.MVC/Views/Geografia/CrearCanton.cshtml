@model SistemaVoto.Modelos.Canton
<h2>Nuevo Cantón</h2>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="CrearCanton" method="post">
    <div class="form-group">
        <label>Provincia a la que pertenece</label>
        <select asp-for="ProvinciaId" class="form-control" asp-items="ViewBag.Provincias"></select>
    </div>
    <div class="form-group">
        <label>Nombre del Cantón</label>
        <input asp-for="Nombre" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success mt-2">Guardar</button>
</form>