@model SistemaVoto.Modelos.Votante

@{
    ViewData["Title"] = "Consulta tu Lugar de Votación";

    // Leemos las variables del controlador de forma segura
    bool mostrarBoton = ViewBag.MostrarResultados ?? false;
    string mensajeEstado = ViewBag.MensajeEstado as string;
}

<div class="text-center mt-4">
    <h1 class="display-5 fw-bold text-primary">🗳️ Consulta tu Lugar de Votación</h1>
    <p class="lead text-muted">
        Ingresa tu número de cédula para conocer tu recinto y mesa electoral.
    </p>

    <div class="mb-4">
        @if (mostrarBoton)
        {
            <a asp-controller="Resultados" asp-action="Index" class="btn btn-outline-success fw-bold px-4 py-2 shadow-sm animate__animated animate__fadeIn">
                📊 VER RESULTADOS OFICIALES
            </a>
        }
        else if (!string.IsNullOrEmpty(mensajeEstado))
        {
            <span class="badge bg-info text-dark p-2 fs-6 shadow-sm">
                <span class="spinner-grow spinner-grow-sm me-1" role="status" aria-hidden="true"></span>
                @mensajeEstado
            </span>
        }
    </div>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">

        <div class="card shadow-sm mb-4">
            <div class="card-body p-4">
                <form asp-action="Index" method="get" class="d-flex gap-2">
                    <input type="text"
                           name="cedula"
                           class="form-control form-control-lg"
                           placeholder="Ej: 1001234567"
                           value="@ViewBag.CedulaBuscada"
                           required
                           maxlength="10"
                           onkeypress="return event.charCode >= 48 && event.charCode <= 57" />

                    <button type="submit" class="btn btn-primary btn-lg px-4">
                        🔍 Consultar
                    </button>
                </form>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-warning mt-3 mb-0 text-center animate__animated animate__shakeX">
                        @ViewBag.Error
                    </div>
                }
            </div>
        </div>

        @if (Model != null)
        {
            <div class="card border-success shadow-lg animate__animated animate__fadeInUp">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">✅ ¡Estás Empadronado!</h4>
                </div>

                <div class="card-body text-center">
                    <h3 class="fw-bold text-dark mb-1">
                        @Model.Nombre @Model.Apellido
                    </h3>
                    <p class="text-muted mb-2">C.I. @Model.Cedula</p>

                    @if (!string.IsNullOrEmpty(Model.NombreProceso))
                    {
                        <span class="badge bg-primary fs-6 mb-3">
                            🗳️ @Model.NombreProceso
                        </span>
                    }

                    <hr />

                    <div class="row text-start mt-4">
                        <div class="col-6 mb-3">
                            <h6 class="text-muted text-uppercase small">Recinto Electoral (Zona)</h6>
                            <h5 class="fw-bold text-primary">@Model.Junta?.Zona?.Nombre</h5>
                        </div>

                        <div class="col-6 mb-3">
                            <h6 class="text-muted text-uppercase small">Dirección</h6>
                            <h5 class="text-dark">@Model.Junta?.Zona?.Direccion</h5>
                        </div>

                        <div class="col-6">
                            <h6 class="text-muted text-uppercase small">Número de Mesa</h6>
                            <h2 class="fw-bold text-danger">Mesa @Model.Junta?.Numero</h2>
                        </div>

                        <div class="col-6">
                            <h6 class="text-muted text-uppercase small">Género de Mesa</h6>
                            <h5 class="text-dark">
                                @(Model.Junta?.Genero == "M" ? "Masculino" : "Femenino")
                            </h5>
                        </div>
                    </div>

                    @if (Model.YaVoto)
                    {
                        // Si ya votó, verificamos si ya descargó el certificado
                        if (!Model.CertificadoDescargado)
                        {
                            // AUN NO DESCARGA -> MOSTRAR BOTÓN
                            <div class="alert alert-success mt-4 shadow-sm border-success bg-light animate__animated animate__pulse">
                                <div class="mb-3">
                                    <h4 class="alert-heading fw-bold text-success">✅ ¡Sufragio Registrado!</h4>
                                    <p class="mb-0">Gracias por cumplir con su deber cívico.</p>
                                </div>
                                <hr>

                                <form asp-action="ObtenerCertificado" method="post" target="_blank">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <input type="hidden" name="nombre" value="@Model.Nombre @Model.Apellido" />
                                    <input type="hidden" name="cedula" value="@Model.Cedula" />
                                    <input type="hidden" name="proceso" value="@(Model.NombreProceso ?? "Elecciones 2026")" />

                                    <button type="submit" class="btn btn-warning fw-bold text-dark w-100 py-2 shadow border border-warning">
                                        📜 DESCARGAR CERTIFICADO DE VOTACIÓN
                                    </button>
                                    <div class="form-text text-danger fw-bold mt-2">
                                        ⚠️ Importante: Solo se emite una vez. Guárdelo inmediatamente.
                                    </div>
                                </form>
                            </div>
                        }
                        else
                        {
                            // YA DESCARGÓ -> MENSAJE INFORMATIVO
                            <div class="alert alert-secondary mt-4 shadow-sm">
                                <div class="d-flex align-items-center justify-content-center">
                                    <span class="fs-2 me-3">ℹ️</span>
                                    <div class="text-start">
                                        <h5 class="alert-heading fw-bold mb-1">Certificado Emitido</h5>
                                        <p class="mb-0">El certificado de votación ya fue entregado previamente.</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        // NO HA VOTADO
                        <div class="alert alert-primary mt-4 shadow-sm border-primary">
                            <div class="d-flex align-items-center justify-content-center">
                                <span class="fs-2 me-3">🗳️</span>
                                <div class="text-start">
                                    <h5 class="alert-heading fw-bold mb-1">HABILITADO PARA VOTAR</h5>
                                    <p class="mb-0">Acérquese a su mesa asignada para sufragar.</p>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        }
    </div>
</div>