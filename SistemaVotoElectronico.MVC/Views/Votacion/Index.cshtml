@{
    ViewData["Title"] = "Ingreso al Recinto";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white text-center">
                <h3>🗳️ Ingreso Votación 2026</h3>
            </div>
            <div class="card-body p-4">

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }

                <form asp-action="Ingresar" method="post">
                    <div class="mb-3">
                        <label class="form-label">Número de Cédula</label>
                        <input type="text" name="cedula" class="form-control form-control-lg" placeholder="Ej: 1700000001" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Código Secreto</label>
                        <input type="password" name="codigo" class="form-control form-control-lg" placeholder="******" required />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Ingresar al Recinto</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>